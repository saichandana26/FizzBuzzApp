@using FizzBuzzApp.Models
@model FizzBuzzNumber
@{
	ViewData["Title"] = "Fizz Buzz";
}
<link href="~/css/stylesheet.css" rel="stylesheet" />
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
	<div>
		Enter Number:@Html.TextBoxFor(Model=>Model.Number)

		<input type="submit" value="submit" />
	</div>
}
@if (Model != null && Model.DisplayNumbers != null)
{
	@foreach (var i in Model.DisplayNumbers)
	{
		<div class="@(i=="Fizz"? "blue" : i=="Buzz"? "green" : "none")">
			@i
		</div>
	}
}

