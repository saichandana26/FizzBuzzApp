@using FizzBuzzApp.Models
@model FizzBuzzNumber
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index","Home",FormMethod.Post))
{
    <div>
        Enter Number:@Html.TextBoxFor(Model=>Model.Number)
        
        <input type="submit" value="submit" />
    </div>
}


@if(Model!=null && Model.DisplayNumbers!=null){
    
    <div>
        @foreach(var i in Model.DisplayNumbers){
            <table>
                <tr>
                    <td>
                        @if (i == "Fizz")
                        {
                            <span style="color:blue">@i</span>
                        }
                        else if(i=="Buzz")
                        {
                            <span style="color:green">@i</span>
                        }
                        else{
                            @i
                        }
                    </td>
            </tr>
        </table>
        }
    </div>
    
    }

